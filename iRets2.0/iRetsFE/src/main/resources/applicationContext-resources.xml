<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       xmlns:jee="http://www.springframework.org/schema/jee"       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd            http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">        <!-- JNDI DataSource for J2EE environments -->	<bean id="dataSourceFactory" class="com.irets.utility.DataSourceFactory"/>	<bean id="dataSource" factory-bean="dataSourceFactory" factory-method="createDataSource"/>    </beans>