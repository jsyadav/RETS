<?xml version="1.0" encoding="UTF-8"?><!--  - Sample namespace-based configuration  -  - $Id: applicationContext-security.xml 4074 2009-12-18 18:44:17Z ltaylor $  --><beans:beans xmlns="http://www.springframework.org/schema/security"    xmlns:beans="http://www.springframework.org/schema/beans"    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd">    <global-method-security pre-post-annotations="enabled" secured-annotations="enabled">        <!-- AspectJ pointcut expression that locates our "post" method and applies security that way        <protect-pointcut expression="execution(* bigbank.*Service.post*(..))" access="ROLE_TELLER"/>        -->    </global-method-security>    <http use-expressions="true">        <intercept-url pattern="/DataFetcher/**" filters="none"/>        <intercept-url pattern="/SearchLocalProperties/cities.xml/**" filters="none"/>		<intercept-url pattern="/SearchLocalProperties/cities.json/**" filters="none"/>        		<intercept-url pattern="/SearchLocalProperties/exteriorfeatures.xml/**" filters="none"/>		<intercept-url pattern="/SearchLocalProperties/exteriorfeatures.json/**" filters="none"/>		        <intercept-url pattern="/SearchLocalProperties.xml/**" filters="none"/>        <!--         <intercept-url pattern="/mlsv4/SearchLocalProperties.xml/**" filters="none"/>        <intercept-url pattern="/bayeast/SearchLocalProperties.xml/**" filters="none"/>        <intercept-url pattern="/imls/SearchLocalProperties.xml/**" filters="none"/>         -->        <intercept-url pattern="/SearchLocalProperties.json/**" filters="none"/>        <!--         <intercept-url pattern="/mlsv4/SearchLocalProperties.json/**" filters="none"/>        <intercept-url pattern="/bayeast/SearchLocalProperties.json/**" filters="none"/>        <intercept-url pattern="/imls/SearchLocalProperties.json/**" filters="none"/>         -->				<intercept-url pattern="/version/**" filters="none"/>        <intercept-url pattern="/PhotoView/**" filters="none"/>        <intercept-url pattern="/imls/SearchLocalProperties/redirect/**" filters="none"/>        <intercept-url pattern="/index.jsp/**" filters="none"/>        <intercept-url pattern="/resources/**" filters="none"/>        <intercept-url pattern="/sencha**/**" filters="none"/>        <intercept-url pattern="/jsapp/**" filters="none"/>        <intercept-url pattern="/**" access="isAuthenticated()" />        <form-login always-use-default-target="true"					login-page="/index.jsp"                    authentication-failure-url="/error.jsp"                    default-target-url="/valid.jsp"                />        <custom-filter position="LOGOUT_FILTER" ref="logoutFilter"/>    </http>    <beans:bean id="logoutFilter" class="org.springframework.security.web.authentication.logout.LogoutFilter">        <beans:property name="filterProcessesUrl" value="/logout.jsp"/>        <beans:constructor-arg index="0" value="/login.jsp"/>        <beans:constructor-arg index="1">            <beans:list>                <beans:ref bean="securityContextLogoutHandler"/>            </beans:list>        </beans:constructor-arg>    </beans:bean>    <beans:bean id="securityContextLogoutHandler"                class="org.springframework.security.web.authentication.logout.SecurityContextLogoutHandler"/>    <authentication-manager>        <authentication-provider>            <password-encoder hash="sha">            </password-encoder>            <jdbc-user-service                                        data-source-ref="dataSource"/>        </authentication-provider>    </authentication-manager></beans:beans>